{
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "css.validate": false,
  "eslint.validate": ["graphql"],
  "eslint.rules.customizations": [
    {
      "rule": "no-autofix/@graphql-eslint/no-unused-fields",
      "severity": "off"
    },
    { "rule": "@graphql-eslint/fields-on-correct-type", "severity": "off" },
    { "rule": "@graphql-eslint/known-type-names", "severity": "off" },
    { "rule": "@graphql-eslint/unique-operation-name", "severity": "off" },
    { "rule": "@graphql-eslint/unique-fragment-name", "severity": "off" },
    { "rule": "@graphql-eslint/require-id-when-available", "severity": "off" },
    { "rule": "import/no-unused-modules", "severity": "off" }
  ],
  // Not sure how to make a regex that is able to match strings in template string interpolations.
  // This is needed to make tailwindcss-intellisense able to work on string interpolations:
  // https://github.com/tailwindlabs/tailwindcss-intellisense/issues/129
  "tailwindCSS.experimental.classRegex": ["ctl\\(([^)]*)\\)"]
}
