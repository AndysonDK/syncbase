{
  "name": "@syncbase/server",
  "packageManager": "yarn@3.0.2",
  "private": true,
  "scripts": {
    "check-types": "tsc --noEmit",
    "dev": "mikro-orm cache:clear && tsnd --respawn --transpile-only src/index.ts",
    "build": "tsc && mikro-orm cache:generate",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^16.10.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.config.ts",
      "./dist/config/orm.config.js"
    ]
  }
}
