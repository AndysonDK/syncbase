{
  "name": "@syncbase/server",
  "packageManager": "yarn@3.0.2",
  "private": true,
  "scripts": {
    "check-types": "tsc --noEmit",
    "dev": "mikro-orm cache:clear && tsnd --respawn --transpile-only src/main.ts",
    "build": "tsc && mikro-orm cache:generate",
    "start": "node dist/main.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.ts",
      "./dist/config/orm.js"
    ]
  }
}
