{
  "name": "@syncbase/server",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "scripts": {
    "dev": "yarn clean && tsnd --respawn --transpile-only src/index.ts",
    "build": "yarn clean && rm -fr tsconfig.tsbuildinfo && tsc && mikro-orm cache:generate",
    "start": "node dist/index.js",
    "test": "jest --runInBand --colors",
    "check-types": "tsc --noEmit",
    "clean": "mikro-orm cache:clear && rm -fr dist"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.1.2",
    "@mikro-orm/core": "^5.1.2",
    "@mikro-orm/postgresql": "^5.1.2",
    "@mikro-orm/reflection": "^5.1.2",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "argon2": "^0.28.5",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.17.0",
    "ioredis": "^5.0.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.ts",
      "./dist/config/orm.js"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "/tests/.+\\.test\\.ts$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 55,
        "functions": 90,
        "lines": 90
      }
    }
  }
}
