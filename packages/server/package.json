{
  "name": "@syncbase/server",
  "packageManager": "yarn@3.0.2",
  "private": true,
  "scripts": {
    "dev": "yarn clean && tsnd --transpile-only src/main.ts",
    "build": "yarn clean && tsc && mikro-orm cache:generate",
    "start": "node dist/main.js",
    "check-types": "tsc --noEmit",
    "clean": "mikro-orm cache:clear && rm -fr dist"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9",
    "apollo-server-core": "^3.4.0",
    "apollo-server-express": "^3.4.0",
    "argon2": "^0.28.2",
    "class-validator": "^0.13.1",
    "connect-redis": "^6.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "graphql": "^15.6.1",
    "graphql-scalars": "^1.12.0",
    "ioredis": "^4.28.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.17",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/ioredis": "^4.27.7",
    "@types/node": "^16.11.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.ts",
      "./dist/config/orm.js"
    ]
  }
}
