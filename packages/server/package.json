{
  "name": "@syncbase/server",
  "packageManager": "yarn@3.1.1",
  "private": true,
  "scripts": {
    "dev": "yarn clean && tsnd --respawn --transpile-only src/main.ts",
    "build": "yarn clean && rm -fr tsconfig.tsbuildinfo && tsc && mikro-orm cache:generate",
    "start": "node dist/main.js",
    "check-types": "tsc --noEmit",
    "clean": "mikro-orm cache:clear && rm -fr dist"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.0.5",
    "@mikro-orm/core": "^5.0.5",
    "@mikro-orm/postgresql": "^5.0.5",
    "@mikro-orm/reflection": "^5.0.5",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "argon2": "^0.28.4",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.1",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.14.1",
    "ioredis": "^4.28.5",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/ioredis": "^4.28.8",
    "@types/node": "^17.0.21",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.ts",
      "./dist/config/orm.js"
    ]
  }
}
