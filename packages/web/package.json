{
  "name": "@syncbase/web",
  "packageManager": "yarn@3.2.1",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"next,graphql\" -c \"bgBlack,bgMagenta\" \"next dev\" \"graphql-codegen\"",
    "build": "next build",
    "start": "next start",
    "storybook": "start-storybook -p 6006",
    "test": "playwright test --config=tests/playwright.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.3",
    "@hookform/resolvers": "^2.8.10",
    "@hookstate/core": "^3.0.13",
    "@netlify/classnames-template-literals": "^1.0.3",
    "@urql/exchange-graphcache": "^4.4.1",
    "graphql": "^15.8.0",
    "next": "^12.1.6",
    "next-i18next": "^11.0.0",
    "next-urql": "^3.3.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.31.2",
    "react-hot-toast": "^2.2.0",
    "sharp": "^0.30.5",
    "urql": "^2.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typed-document-node": "^2.2.11",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@graphql-codegen/typescript-urql-graphcache": "^2.2.13",
    "@playwright/test": "^1.22.2",
    "@storybook/addon-a11y": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/addon-interactions": "^6.5.5",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^6.5.5",
    "@storybook/testing-library": "^0.0.11",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/tailwindcss": "^3.0.10",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.2"
  },
  "codegen": {
    "watch": true,
    "schema": "../server/schema.graphql",
    "documents": "src/graphql/**/*.graphql",
    "generates": {
      "src/graphql/hooks.ts": {
        "config": {
          "defaultScalarType": "string"
        },
        "plugins": [
          "typescript",
          "typescript-operations",
          "typed-document-node",
          "typescript-urql-graphcache"
        ]
      }
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
